<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backkk"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shelter Registration"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.06" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="280dp"
                android:layout_height="271dp"
                android:src="@drawable/dogscats"
                android:layout_marginTop="40dp"
                android:layout_marginStart="65dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.295" />

            <EditText
                android:id="@+id/editShelterName"
                android:layout_width="314dp"
                android:layout_height="55dp"
                android:ems="10"
                android:inputType="text"
                android:text="Shelter's Name"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.665"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:layout_marginStart="45dp"/>

            <EditText
                android:id="@+id/editShelterLocation"
                android:layout_width="314dp"
                android:layout_height="55dp"
                android:ems="10"
                android:inputType="text"
                android:text="Shelter's Location"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.665"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:layout_marginStart="45dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categories Of pets available"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="406dp"
                android:layout_height="67dp"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.879">

                <CheckBox
                    android:id="@+id/checkDogs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dogs"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <CheckBox
                    android:id="@+id/checkCats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cats"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <CheckBox
                    android:id="@+id/checkBirds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Birds"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <CheckBox
                    android:id="@+id/checkCows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cows"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvCapacityHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity and Current Strength :-"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/dogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editCapacityDogs"
                    android:layout_width="360dp"
                    android:layout_height="55dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Total capacity for Dogs"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.665"
                    android:layout_marginTop="5dp"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="20dp"/>

                <EditText
                    android:id="@+id/editCurrentDogs"
                    android:layout_width="360dp"
                    android:layout_height="55dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Current strength of Dogs"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.665"
                    android:layout_marginTop="5dp"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editCapacityCats"
                    android:layout_width="360dp"
                    android:layout_height="55dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Total capacity for Cats"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.665"
                    android:layout_marginTop="5dp"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="20dp"/>

                <EditText
                    android:id="@+id/editCurrentCats"
                    android:layout_width="360dp"
                    android:layout_height="55dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Current strength of Cats"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.665"
                    android:layout_marginTop="5dp"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editCapacityCows"
                    android:layout_width="360dp"
                    android:layout_height="55dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Total capacity for Cows"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.665"
                    android:layout_marginTop="5dp"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="20dp"/>

                <EditText
                    android:id="@+id/editCurrentCows"
                    android:layout_width="360dp"
                    android:layout_height="55dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Current strength of Cows"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.665"
                    android:layout_marginTop="5dp"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/birds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editCapacityBirds"
                    android:layout_width="360dp"
                    android:layout_height="55dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Total capacity for Cows"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.665"
                    android:layout_marginTop="5dp"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="20dp"/>

                <EditText
                    android:id="@+id/editCurrentBirds"
                    android:layout_width="360dp"
                    android:layout_height="55dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Current strength of Cows"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.665"
                    android:layout_marginTop="5dp"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/submitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register Shelter"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>